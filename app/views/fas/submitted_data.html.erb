<div class="container">
  <h2 class="basic-head fw-bold text-center bg-primary p-3 my-3">Submitted Data</h2>
  <div class="d-flex align-items-center justify-content-between mb-3">
    <%= link_to "Home", new_fa_path, class: 'btn btn-primary' %>
    <%= link_to "Search", search_fa_path, class: 'btn btn-primary' %>
    <%= link_to "Go to List >>", root_path, class: 'btn btn-primary' %>
  </div>
  <table class="table table-striped table-bordered align-middle text-center">
    <tbody>
      <tr>
        <th style="width: 80px">Sr No.</th>
        <th>Date</th>
        <th>Time</th>
        <th>Line</th>
        <th>Model</th>
        <th>Barcode</th>
      </tr>
      <% @submitted_fas.each_with_index do |fa, index| %>
        <% fa.barcodes.each do |barcode| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= fa.date&.strftime('%Y-%m-%d') %></td>
            <td><%= fa.time&.strftime('%H:%M:%S') %></td>
            <td><%= fa.Line %></td>
            <td><%= fa.Model %></td>
            <td><%= barcode.value %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>