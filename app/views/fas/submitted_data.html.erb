<div class="container">
  <h2 class="basic-head fw-bold text-center bg-primary p-3 my-3">Submitted Data</h2>
  <div class="d-flex align-items-center justify-content-between mb-3">
    <%#= link_to "Search", search_fas_path, class: 'btn btn-primary' %>
    <%#= link_to "Go to List >>", root_path, class: 'btn btn-primary' %>
  </div>
  <table class="table table-striped table-bordered align-middle text-center">
    <tbody>
      <tr>
        <th style="width: 80px">Sr No.</th>
        <th style="width: 130px">Date</th>
        <th>Time</th>
        <th>Line</th>
        <th style="width: 100px">Model</th>
        <th style="width: 330px">Barcode</th>
        <th style="width: 100px">FT Status</th>
        <th>Remarks</th>
      </tr>
      <% serial_number = 0 %>
      <% @submitted_fas.reverse_each.with_index(1) do |fa, index| %>
        <% fa.barcodes.each do |barcode| %>
          <% serial_number += 1 %>
          <tr>
            <td><%= serial_number %></td>
            <td><%= fa.date&.strftime('%Y-%m-%d') %></td>
            <td><%= fa.time&.strftime('%H:%M:%S') %></td>
            <td><%= fa.Line %></td>
            <td><%= fa.Model %></td>
            <td><%= barcode.value %></td>
            <td><%= barcode.status %></td>
            <td><%= barcode.remarks %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>