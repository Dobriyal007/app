<div class="container">
  <h2 class="basic-head fw-bold text-center bg-primary p-3 my-3">Barcode Data</h2>
  <div class="d-flex align-items-center justify-content-between mb-3">
    <%= link_to "Home", new_fa_path, class: 'btn btn-primary' %>
    <%= link_to 'Export to Excel', export_excel_fas_path(format: 'xlsx'), class: 'btn btn-success' %>
  </div>
  <table class="table table-striped table-bordered align-middle text-center">
    <tbody>
      <tr>
        <th style="width: 80px">Sr No.</th>
        <th>Date</th>
        <th>Time</th>
        <th>Line</th>
        <th>Model</th>
        <th>Barcode</th>
      </tr>
      <% @fa.barcodes.each_with_index do |barcode, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= @fa.date&.strftime('%Y-%m-%d') %></td>
          <td><%= @fa.time&.strftime('%H:%M:%S') %></td>
          <td><%= barcode.fa.Line %></td>
          <td><%= barcode.fa.Model %></td>
          <td><%= barcode.value %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex align-items-center justify-content-between">
    <div>
      <%= link_to '<< Back to FA', fas_path, style: "color: white;", class: "btn btn-sm btn-secondary", style: "margin-right: 500px; color: white" %>
    </div>
    <%= link_to "Go to List >>", root_path, class: "btn btn-sm btn-secondary", style: "color: white;" %>
  </div>


</div>