<div class="container">
  <h2 class="basic-head fw-bold text-center bg-primary p-3 my-3">FA DATA LIST</h2>
  <table class="table table-striped table-bordered align-middle text-center">
    <tbody>
      <tr>
        <th style="width: 80px">Sr No.</th>
        <th>Date</th>
	      <th>Time</th>
	      <th>Line</th>
	      <th>Model</th>
	      <th>Qty</th>
	      <th>Actions</th>	
      </tr>
      <% @fas.each_with_index do |fa, index| %>
	      <tr>
	        <td><%= index + 1 %></td>
	        <td><%= fa.date&.strftime('%Y-%m-%d') %></td>
	        <td><%= fa.time&.strftime('%H:%M:%S') %></td>
	        <td><%= fa.Line %></td>
	        <td><%= fa.Model %></td>
	        <td><%= fa.qty %></td>
	        <td>
	        	<div class="d-flex justify-content-center">
		        	<%#= link_to "Show", fa_path(fa) %>
		        	<%#= button_to "Delete", fa, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mx-2" %>
		        	<%= link_to 'View Barcodes', barcodes_fa_path(fa), class: "btn btn-primary mx-2" %></td>
		        </div>
	      </tr>
	    <% end %>
    </tbody>
  </table>
	<div class="pagination my-3 d-flex justify-content-center">
	  <%= will_paginate @fas %>
	</div>
</div>

